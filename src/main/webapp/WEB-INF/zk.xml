<zk>

	<system-config>
		<!-- <session-cache-class>my.SessionCache</session-cache-class> -->
		<label-location>/WEB-INF/labels.properties</label-location>
	</system-config>
	
	<device-config>
		<device-type>ajax</device-type>
		<timeout-uri>/timeout.zul</timeout-uri><!-- An empty URL can cause the browser to reload the same URL -->
	</device-config>
	<!-- <listener>
        <listener-class>demo.model.HibernateListeners</listener-class>
   </listener> -->
   
   <!-- ====================================================== -->
	<!--   Displays the wait indicator on every user action     -->
	<!-- ====================================================== -->
	<library-property>
		<name>org.zkoss.zul.progressbox.position</name>
		<value>center</value>
	</library-property>
	<client-config>
		<processing-prompt-delay>1</processing-prompt-delay>
	</client-config>
	
	<language-config>
        <addon-uri>/WEB-INF/ckez.xml</addon-uri>
    </language-config>

</zk>
